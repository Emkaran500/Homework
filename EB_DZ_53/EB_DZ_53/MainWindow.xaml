<Window x:Class="EB_DZ_53.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EB_DZ_53"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Processes}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" FontSize="20" Binding="{Binding Name}" Width="300"/>
                <DataGridTextColumn Header="Memory" FontSize="20" Binding="{Binding Memory}" Width="150"/>
                <DataGridTextColumn Header="Disk" FontSize="20" Binding="{Binding Disk}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
